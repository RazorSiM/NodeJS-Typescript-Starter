{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "description": "A quick starter template for Node.js, with Typescript and ES6 support.",
  "author": {
    "name": "Simone 'Raz' Colabufalo",
    "email": "me@raz.works",
    "url": "https://github.com/RazorSiM"
  },
  "engines": {
    "node": ">=16"
  },
  "exports": "./index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:execute": "tsc && node -r dotenv/config ./dist/index.js",
    "execute": "node -r dotenv/config --loader ts-node/esm ./src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext .ts,.js src --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write ."
  },
  "license": "ISC",
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  }
}
